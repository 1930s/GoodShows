<td class="poster-col">
  <% if (show.get('poster_path')) { %>
  <a href="#shows/<%= show.id %>">
    <img src="https://image.tmdb.org/t/p/w92<%= show.get('poster_path') %>" alt="">
  </a>
  <% } %>
</td>
<td><a href="#shows/<%= show.id %>"><%= show.escape('name') %><a></td>
<td>
  <%= _.map(this.shelvesWithShow(this.shelves, this.model), function(shelf) { return shelf.get('title')}).join(', ') %>
</td>
<td>
  <%= GoodShows.dateFormat(show.get('date_added')) %>
</td>
<td>
  <% if (shelf.id === 0) {%>
  <button class="btn btn-danger btn-xs remove-from-all-shelves"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
  <% } else { %>
  <button class="btn btn-danger btn-xs remove-show"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
  <% } %>
</td>


