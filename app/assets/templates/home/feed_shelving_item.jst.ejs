<div class="col-xs-2 user-box">
  <div class="row">
    <div class="col-lg-12 user-picture">
      <a href="#users/<%= user.id %>">
        <img src="<%= user.get('file_url') %>" alt="<%= user.escape('name') %>" class="img-rounded img-responsive center-block">
      </a>
    </div>
  </div>
</div>
<div class="col-xs-10">
  <h4>
    <a href="#users/<%= user.id %>"><%= user.escape('name') %></a> added <a href="#shows/<%= show.id %>"><%= show.escape('name') %></a> to their <a href="#users/<%= user.id %>/show-shelves/<%= shelf.id %>"><%= shelf.escape('title') %></a> shelf
  </h4>
</div>
<div class="col-xs-10">
  <div class="col-sm-5 col-md-4 col-lg-3 show-box">
    <div class="row">
      <div class="col-lg-12 show-picture">
        <a href="#shows/<%= show.id %>">
          <img src="https://image.tmdb.org/t/p/w185<%= show.get('poster_path') %>" alt="" class="img-responsive center-block">
        </a>
      </div>
    </div>
    <div class="row show-title">
      <div class="col-lg-12 text-center">
        <a class="h6" href="#shows/<%= show.id %>"><%= show.escape('name') %></a>
      </div>
    </div>
    <div class="row">
      <div class="add-to-shelf col-lg-12 text-center">
      
      </div>
    </div>
  </div>
</div>
