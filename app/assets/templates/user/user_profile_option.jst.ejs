<% if (user.get('current_user')) { %>
  <a href="#" class="edit-name hover-over-start">
    <small>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
     <span class="sr-only">Edit</span>
    </small>
  </a>
<% } else if (user.get('current_friend')) { %>
  <button class="hover-over-start unfriend-request btn btn-danger">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
    Unfriend
  </button>
<% } else if (user.get('pending_proposal')) { %>
  <button class="hover-over-start pending-friend-proposal btn btn-default disabled">
    <span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span>
    Friend request pending
  </button>
<% } else if (user.get('pending_request')) { %>
  <button class="hover-over-start pending-friend-request btn btn-primary">
    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    Accept friend request
  </button>
<% } else { %>
  <button class="hover-over-start send-friend-request btn btn-primary has-spinner">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    Add friend
    <span class="spinner"><i class="fa fa-spin fa-spinner"></i></span>
  </button>
<% } %>