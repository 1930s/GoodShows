<div class="col-sm-8 user-show">
  <div class="row user-header">
    <div class="col-sm-2 user-picture">
      <img src="<%= user.get('file_url') %>" alt="<%= user.escape('name') %>" class="img-rounded img-responsive">
      <% if (user.get('current_user')) { %>
        <a href="#" class="user-picture-edit">
          <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
        </a>
      <% } %>
    </div>
    <div class="col-sm-10 user-details">
      <h1 class="name">
        <%= user.escape('name') %>
        <% if (user.get('current_user')) { %>
          <a href="#" class="edit-name hover-over-start">
            <small>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true" ></span>
             <span class="sr-only">Edit</span>
            </small>
          </a>
        <% } else if (user.get('current_friend')) { %>
          <button class="hover-over-start unfriend-request btn btn-danger">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
            Unfriend
          </button>
        <% } else if (user.get('pending_proposal')) { %>
          <button class="hover-over-start pending-friend-proposal btn btn-default disabled">
            <span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span>
            Friend request pending
          </button>
        <% } else if (user.get('pending_request')) { %>
          <button class="hover-over-start pending-friend-request btn btn-primary">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            Accept friend request
          </button>
        <% } else { %>
          <button class="hover-over-start send-friend-request btn btn-primary">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Add friend
          </button>
        <% } %>
      </h1>
    </div>
  </div>
  <div class="user-body">
    <div class="row shelves-header">
      <h4><%= user.escape('name') %>'s shelves</h4>
    </div>
    <div class="row shelves-list">
      
    </div>
  </div>
</div>
<div class="col-sm-4 friends-show">
  <div class="row friends-header">
    <h4><%= user.escape('name') %>'s friends</h4>
  </div>
  <div class="row friends-list-wrapper">
    
  </div>
</div>
