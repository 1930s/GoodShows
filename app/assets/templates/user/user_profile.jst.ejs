<div class="col-sm-8 user-show">
  <div class="row user-header">
    <div class="col-lg-2 user-picture">
      <img src="<%= user.get('file_url') %>" alt="<%= user.escape('name') %>" class="img-rounded img-responsive">
      <% if (user.id === CURRENT_USER_ID) { %>
        <a href="#" class="user-picture-edit">
          <span class="glyphicon glyphicon-camera" aria-hidden="true"></span>
        </a>
      <% } %>
    </div>
    <div class="col-lg-10 user-details">
      <h1 class="name">
        <%= user.escape('name') %>
        <small class="user-profile-option">
          
        </small>
      </h1>
    </div>
  </div>
  <div class="user-body row">
    <div class="col-lg-12 shelves-header">
      <h4><%= user.escape('name') %>'s shelves</h4>
    </div>
    <div class="col-lg-12 shelves-list">
      
    </div>
    <div class="user-feed-header col-lg-12">
      <h4><%= user.escape('name') %>'s updates</h4>
    </div>
    <div class="col-lg-12 user-feed loader">
      
    </div>
    <div class="col-lg-12">    
      <button class="col-lg-4 col-lg-offset-4 col-sm-4 col-sm-offset-4 text-center fetch-more-updates btn btn-primary has-spinner">
        Fetch more updates
        <span class="spinner"><i class="fa fa-spin fa-spinner"></i></span>
      </button>
    </div>
    <div class="reviews-header col-lg-12">
      <h4><%= user.escape('name') %>'s ratings and reviews</h4>
    </div>
    <div class="col-lg-12 reviews-list">
      
    </div>
  </div>
</div>
<div class="col-sm-4 friends-show">
  <div class="row friends-header">
    <h4><%= user.escape('name') %>'s friends</h4>
  </div>
  <div class="row friends-list-wrapper">
    
  </div>
  <% if (user.id === CURRENT_USER_ID) {%>
  <div class="row friends-header">
    <h4>Your friend requests</h4>
  </div>
  <div class="row friend-requests-list-wrapper">
    
  </div>
  <% } %>
</div>
