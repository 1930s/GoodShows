<div class="col-xs-2 show-box">
  <div class="row">
    <div class="col-sm-12 show-picture">
      <a href="#shows/<%= show.id %>">
        <img src="https://image.tmdb.org/t/p/w185<%= show.get('poster_path') %>" alt="" class="img-responsive center-block">
      </a>
    </div>
  </div>
  <div class="row show-title">
    <div class="col-sm-12 text-center">
      <a class="h6" href="#shows/<%= show.id %>"><%= show.escape('original_name') %></a>
    </div>
  </div>
</div>
<div class="col-xs-10 user-review">
  <div class="row rating">
    <input type="number"
       class="rating show-rating-stars"
       min=0
       max=5
       step=0.01
       value="<%= review.escape('rating') %>"
       data-size="xs">
  </div>
  <%= marked(review.escape('review'))  %>
</div>